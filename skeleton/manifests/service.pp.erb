# == Class <%= metadata.name %>::service
#
# This class is meant to be called from <%= metadata.name %>
# It ensures the service is in the desired state
#
class <%= metadata.name %>::service(
  $enable,
  $ensure,
) {

  include ::<%= metadata.name %>::params
  service{$::<%= metadata.name %>::params::service_name:
    ensure     => $ensure,
    enable     => $enable,
    hasstatus  => $::<%= metadata.name %>::params::service_hasstatus,
    hasrestart => $::<%= metadata.name %>::params::service_hasrestart,
  }

}
